{
  "manifest_version": 2,
  "name": "Better Suspender",
  "version": "1.0.11",
  "description": "Reduce Chrome's memory usage extensively suspending certain unused tabs automatically.",
  "author": "gmail@gmail.com",
  //"homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/zz20-03.png",
    "default_title": "Better Suspender",
    "default_popup": "browser_action.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "unlimitedStorage",
    "notifications"
  ],
  "web_accessible_resources": [
    "web/*"
  ],
  "background": {
    "page": "background.html",
    "OUTDATED_scripts": [
      "utils.js",
      "namespace.js",
      "common.js",
      "TabList.js",
      "options_lib.js",
      "aspects/tabs.js",
      "aspects/webrequest.js",
      "aspects/menus.js",
      "aspects/commands.js",
      "aspects/resources.js",
      "aspects/suspension.js",
      "aspects/opts.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "html2canvas.min.js",
        //"utils.js",
        //"common.js",
        "content.js"
      ],
      "run_at": "document_idle", // also "document_start"
      "matches": [
        //"<all_urls>",
        //"*://*/*",
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "commands": {
    "command-suspend-current-tab": {
      "description": "suspend current tab",
      "suggested_key": {
        "default": "Alt+S"
      }
    }
  }
}
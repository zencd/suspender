{
  "manifest_version": 2,
  "name": "Better Suspender",
  "version": "1.0.14",
  "description": "Reduce Chrome's memory usage extensively suspending unused tabs automatically.",
  "author": "zeencd@gmail.com",
  //"homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/zz16.png",
    "48": "icons/zz48.png",
    "128": "icons/zz128.png"
  },
  "default_locale": "en",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "16": "icons/a/zz16c.png",
      //"19": "icons/zz19.png",
      //"20": "icons/zz20.png",
      "32": "icons/a/zz32c.png",
      //"38": "icons/zz38.png",
      "40": "icons/zz40.png"
    },
    "default_title": "Better Suspender",
    "default_popup": "browser_action.html"
  },
  "permissions": [
    "tabs", "<all_urls>", "contextMenus", "webRequest", "webRequestBlocking", "webNavigation", "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "park/*"
  ],
  "background": {
    "page": "bg/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "lib/html2canvas.min.js",
        "content.js"
      ],
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "command-suspend-current-tab": {
      "description": "Suspend active tab",
      "suggested_key": {
        "default": "Alt+S"
      }
    },
    "command-reload-ext": {
      "description": "Reload extension",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  }
}
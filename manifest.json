{
  "manifest_version": 2,
  "name": "Better Suspender",
  "version": "1.0.12",
  "description": "Reduce Chrome's memory usage extensively suspending certain unused tabs automatically.",
  "author": "gmail@gmail.com",
  //"homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/zz20-03.png",
    "default_title": "Better Suspender",
    "default_popup": "browser_action.html"
  },
  "permissions": [
    "tabs",
    //"activeTab", // todo inexistent!
    "<all_urls>",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    //"notifications",
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "web/*"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "html2canvas.min.js",
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "command-suspend-current-tab": {
      "description": "Suspend active tab",
      "suggested_key": {
        "default": "Alt+S"
      }
    },
    "command-reload-ext": {
      "description": "Reload extension",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  }
}